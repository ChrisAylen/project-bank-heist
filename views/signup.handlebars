<div class="container col col-lg-6 justify-content-center align-items-center mt-5 signup-form border">
  <form>
      <div class="form-group m-2">   
        <h1 class="h3 mb-3 font-weight-normal">Create an account:</h1>
        <label for="name-signup">name:</label>
        <input class="form-control" type="text" id="name-signup" />
      </div>
      <div class="form-group m-2">
        <label for="email-signup">email:</label>
        <input class="form-control" type="text" id="email-signup" />
      </div>
      <div class="form-group m-2">
        <label for="password-signup">password:</label>
        <input class="form-control" type="password" id="password-signup" />
      </div>
      <div class="form-group m-4">
        <button class="btn btn-primary" type="submit">signup</button>
         <a class="btn btn-lg btn-primary btn-block" href="/login">Log in</a>
      </div>
    </form>
</div>




   <script src="./js/signup.js"></script>