<div class="container col col-lg-6 justify-content-center align-items-center mt-5 form-signin border">
  <form>
      <div class="form-group m-2">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail">Email address</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="Email address">
        <label for="inputPassword">Password</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Password">     
        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>

        <div>
        <button class="btn btn-primary signin-btn" type="submit">Sign in</button>
        <a class="btn-block signup-btn" href="/sign-up">Sign up</a>
        </div>
      

    </form>
</div>

